{
  "project": "Kickoff Club",
  "version": "2.0",
  "variant": "Warm & Cozy Design System",
  "frames": [
    {"name": "Home Desktop", "width": 1440, "height": 900},
    {"name": "Home Tablet", "width": 768, "height": 1024},
    {"name": "Home Mobile", "width": 375, "height": 812},
    {"name": "Lesson Desktop", "width": 1440, "height": 900},
    {"name": "Lesson Mobile", "width": 375, "height": 812},
    {"name": "Badge Modal", "width": 420, "height": 320}
  ],
  "tokens": {
    "colors": {
      "navy": "#0B2545",
      "warmGold": "#E6B85C",
      "blush": "#FCE8E4",
      "rose": "#FF9AA2",
      "sage": "#CDE7D9",
      "slate": "#0F1724",
      "blushLight": "#FEF5F2",
      "roseLight": "#FFE4E6",
      "sageLight": "#E8F4ED",
      "navyLight": "#1B3A5F",
      "goldLight": "#F0CFA3"
    },
    "radius": {
      "card": "20px",
      "chip": "12px"
    },
    "spacing": {
      "base": 8,
      "sm": 4,
      "md": 16,
      "lg": 24,
      "xl": 32,
      "xxl": 48
    }
  },
  "typography": {
    "hero": {
      "font": "Playfair Display",
      "weight": 700,
      "size_desktop": 48,
      "size_mobile": 28,
      "lineHeight": 1.08
    },
    "heading": {
      "font": "Playfair Display",
      "weight": 600,
      "size": 24,
      "lineHeight": 1.2
    },
    "body": {
      "font": "Poppins",
      "weight": 400,
      "size": 16,
      "lineHeight": 1.5
    },
    "button": {
      "font": "Poppins",
      "weight": 600,
      "size": 16
    }
  },
  "components": [
    {"name": "Nav", "variants": ["default"], "notes": "logo left, links right, sign-in outline"},
    {"name": "Hero", "variants": ["video","static"], "notes": "Headline, subhead, primary CTA, secondary CTA, video preview card"},
    {"name": "LessonCard", "variants": ["small","large"], "notes": "thumb, title, duration badge, watch CTA"},
    {"name": "LessonPlayer", "variants": ["desktop","mobile"], "notes": "video + captions track, transcript panel, storyboard list"},
    {"name": "Quiz", "variants": ["inline","modal"], "notes": "choices + feedback states"},
    {"name": "BadgeModal", "variants": ["default"], "notes": "badge title, share actions"},
    {"name": "Testimonial", "variants": ["single"], "notes": "avatar, quote, name"}
  ],
  "assets": [
    {"name": "hero-preview.mp4", "type": "video", "size": "10-15s loop"},
    {"name": "lesson-scoring.vtt", "type": "vtt"},
    {"name": "thumb-scoring.jpg", "type": "jpg", "size": "1200x675"},
    {"name": "badge-first-play.svg", "type": "svg"},
    {"name": "social-cut-1.mp4", "type": "video-vertical", "size": "1080x1920", "duration": "15s"},
    {"name": "social-cut-2.mp4", "type": "video-vertical", "duration": "15s"},
    {"name": "social-cut-3.mp4", "type": "video-vertical", "duration": "15s"}
  ],
  "copy": {
    "hero_headline": "Love the vibe. Learn the game.",
    "hero_subhead": "Bite-size lessons that turn NFL chaos into \"I get it.\" Start with a 90-second explainer.",
    "primary_cta": "Start 90-second lesson",
    "secondary_cta": "Take the New-Fan Quiz",
    "lesson_title": "Scoring & Game Flow â€” 90s",
    "badge_title": "First-Play Expert",
    "lead_magnet": "Free cheat sheet: 10 signs a play is about to be great"
  },
  "prototype": {
    "flows": [
      {"from": "Home Desktop", "action": "Primary CTA", "to": "Lesson Desktop"},
      {"from": "Home Mobile", "action": "Primary CTA", "to": "Lesson Mobile"},
      {"from": "Lesson Desktop", "action": "Play complete or Mark complete", "to": "Quiz Modal"},
      {"from": "Quiz Modal", "action": "Submit correct", "to": "Badge Modal"}
    ],
    "interactions": {"hover": true, "focus": true, "keyboard": true}
  },
  "accessibility": {
    "contrast_min": "4.5:1 for body text",
    "aria_requirements": "All interactive controls require aria-labels",
    "captions": "All videos must include a WebVTT file"
  },
  "handoff": {
    "tailwind_mapping": {
      "navy": "colors.navy",
      "warmGold": "colors.warmGold",
      "blush": "colors.blush",
      "rose": "colors.rose",
      "sage": "colors.sage",
      "slate": "colors.slate"
    },
    "css_variables": {
      "--color-navy": "#0B2545",
      "--color-warm-gold": "#E6B85C",
      "--color-blush": "#FCE8E4",
      "--color-rose": "#FF9AA2",
      "--color-sage": "#CDE7D9",
      "--color-slate": "#0F1724",
      "--radius-card": "20px",
      "--radius-chip": "12px",
      "--spacing-base": "8px"
    },
    "developer_notes": "Include Tailwind token mapping, component spacing, and export assets in ZIP"
  }
}
