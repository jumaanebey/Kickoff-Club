# Copy to .env.local and fill in production keys when ready

# App Configuration
VITE_APP_NAME=KickoffClub

# Google Analytics 4
# Get your measurement ID from https://analytics.google.com/
# Format: G-XXXXXXXXXX
VITE_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Cloudflare R2 Video Storage
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=kickoff-club-videos
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
VIDEO_URL_EXPIRATION=7200

# Whop Integration (Payment & Membership)
# Get these from: https://whop.com/dashboard
WHOP_API_KEY=your_whop_api_key
WHOP_PRODUCT_ID=your_product_id
WHOP_WEBHOOK_SECRET=your_webhook_secret

# Admin Tools (Optional)
# Set a secure random string for admin access
ADMIN_UNLOCK_KEY=your_secure_admin_key

# Optional: Future integrations
# SENDGRID_API_KEY=
# ANALYTICS_WRITE_KEY=
